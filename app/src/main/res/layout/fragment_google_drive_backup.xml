<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/drive_backup_container"
    android:visibility="gone"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/fragment_backup_verify"
        android:layout_width="match_parent"
        android:layout_height="?attr/listPreferredItemHeightLarge"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="vertical"
        tools:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/GoogleDriveBackupFragment__google_drive_backup_title"
            android:textAppearance="@style/Signal.Text.Body"
            android:textColor="@color/signal_text_primary"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/GoogleDriveBackupFragment__google_drive_backup_description"
            android:textAppearance="@style/Signal.Text.Preview"
            android:textColor="@color/signal_text_secondary" />
    </LinearLayout>

    <com.dd.CircularProgressButton
        android:id="@+id/drive_sign_in_backup"
        style="@style/Button.Registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textSize="14sp"
        app:cpb_textIdle="@string/GoogleDriveBackupFragment__google_drive_sign_in" />

    <com.dd.CircularProgressButton
        android:id="@+id/drive_backup"
        style="@style/Button.Registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textSize="14sp"
        android:visibility="gone"
        app:cpb_textIdle="@string/GoogleDriveBackupFragment__google_drive_backup" />
